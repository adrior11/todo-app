{
    "name": "todo-monorepo",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
      "backend",
      "frontend"
    ],
    "scripts": {
      "test": "pnpm --filter ./backend test",
      "format": "pnpm --filter ./backend format && pnpm --filter ./frontend format",
      "lint": "pnpm --filter ./backend lint",
      "prettier": "pnpm --filter ./backend prettier && pnpm --filter ./frontend prettier",
      "start:backend": "pnpm --filter backend start",
      "start:frontend": "pnpm --filter frontend start"
    },
    "devDependencies": {
      "prettier": "^3.3.3"
    }
  }
  
