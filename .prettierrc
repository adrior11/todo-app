{
    "singleQuote": true,
    "tabWidth": 4,
    "printWidth": 120,
    "trailingComma": "all",
    "arrowParens": "avoid",
    "overrides": [
        {
            "files": ["tsconfig.json"],
            "options": {
                "trailingComma": "none"
            }
        },
        {
            "files": "*.md",
            "options": {
                "printWidth": 90,
                "proseWrap": "always",
                "tabWidth": 2
            }
        }
    ]
}
